<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toraas.tg14"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="9" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.tg14.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tg14.ProgramActivity"
            android:label="@string/title_activity_program"
            android:parentActivityName="com.example.tg14.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tg14.MainActivity" />
        </activity>
        <activity
            android:name="com.example.tg14.MapActivity"
            android:label="@string/title_activity_map"
            android:parentActivityName="com.example.tg14.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tg14.MainActivity" />
        </activity>
        <activity
            android:name="com.example.tg14.CreativeActivity"
            android:label="@string/title_activity_creative"
            android:parentActivityName="com.example.tg14.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tg14.MainActivity" />
        </activity>
    </application>

</manifest>
